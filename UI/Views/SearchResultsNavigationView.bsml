<bg>
  <horizontal id="header" bg="panel-top" anchor-min-x="0" anchor-min-y="1" anchor-max-x="1" anchor-max-y="1" size-delta-x="-60" size-delta-y="10" anchor-pos-y="-5">
    <text text="Search Results" align="Center" font-size="7" />
  </horizontal>
  <text id="results-text" text="~results-text-placeholder" font-align="Center" font-size="6" word-wrapping="true" />
  <text id="last-search-text"
        text=""
        font-size="3.5"
        font-align="TopRight"
        anchor-min-x="0.5" anchor-min-y="0.5"
        anchor-max-x="0.5" anchor-max-y="0.5"
        anchor-pos-x="23" anchor-pos-y="-31.5"
        size-delta-x="30" size-delta-y="8" />
  <button id="force-search-button"
          text="Force Show Results"
          on-click="force-search-button-clicked"
          anchor-min-x="0.5" anchor-min-y="0.5"
          anchor-max-x="0.5" anchor-max-y="0.5"
          preferred-width="36" preferred-height="10"
          anchor-pos-x="59" anchor-pos-y="-32" />
  <button id="last-search-button"
          text="~redo-search-button-default-text"
          on-click="last-search-button-clicked"
          anchor-min-x="0.5" anchor-min-y="0.5"
          anchor-max-x="0.5" anchor-max-y="0.5"
          preferred-width="36" preferred-height="10"
          anchor-pos-x="59" anchor-pos-y="-32" />
  <button id="reset-keyboard-pos-button"
          text="Reset Keyboard Position"
          font-size="3"
          on-click="reset-keyboard-pos-button-clicked"
          anchor-min-x="0" anchor-min-y="0"
          anchor-max-x="0" anchor-max-y="0"
          pivot-x="0" pivot-y="0"
          preferred-width="34" preferred-height="8"
          anchor-pos-x="3.5" anchor-pos-y="2.5" />
</bg>